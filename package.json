{
  "name": "portfolio-github-integration",
  "version": "2.4.0",
  "description": "Browser-native library to fetch GitHub repositories and custom metadata for dynamic portfolio rendering",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/index.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./server": "./dist/helpers/getReposServer.js",
    "./browser": "./dist/helpers/getReposBrowser.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run build && node --experimental-vm-modules node_modules/.bin/jest --verbose",
    "test:watch": "npm run build && jest --watch",
    "test:custom": "npm run build && TEST_GITHUB_USERNAME=$npm_config_user node --experimental-vm-modules node_modules/.bin/jest --verbose"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "github",
    "portfolio",
    "browser",
    "frontend",
    "react",
    "vue",
    "angular",
    "repos",
    "integration"
  ],
  "author": "Matheus Fonseca",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "babel-jest": "^30.1.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  },
  "type": "module",
  "browser": {
    "./dist/index.js": "./dist/index.js"
  }
}
